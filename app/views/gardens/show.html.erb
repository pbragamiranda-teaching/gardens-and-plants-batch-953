<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
    <p>Welcome to Heaven</p>
  </div>
</div>

<div class="container">
  <div class="row mt-4">
    <% @garden.plants.each do |plant| %>
      <div class="col-4">
        <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= plant.image_url %>);">
          <%= plant.name %>
        <%= link_to "+", plant_path(plant) ,class: "card-remove-link", data: { turbo_method: :delete, turbo_confirm: "u sure you want to kill a plant?!"} %>
        </div>
      </div>
    <% end %>
  </div>


  <div class="row justify-content-center">
    <div class="col-4">
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit "add plant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
